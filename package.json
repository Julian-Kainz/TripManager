{
  "name": "TripManager",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/cds-test": "^0.4.0",
    "@cap-js/postgres": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "axios": "^1.12.2",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.10.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "test": "npx jest tests/test.js",
    "watch-tripmanager": "cds watch --open tripmanager/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "auth": {
        "kind": "mocked",
        "users": {
          "testWorker": {
            "password": "testWorker",
            "roles": [
              "worker"
            ]
          },
          "testBackofficeWorker": {
            "password": "testBackofficeWorker",
            "roles": [
              "backoffice-worker"
            ]
          },
          "testAdmin": {
            "password": "testAdmin",
            "roles": [
              "admin"
            ]
          }
        }
      },
      "db": {
        "[development]": {
          "kind": "sqlite",
          "impl": "@cap-js/sqlite",
          "credentials": {
            "url": "db.sqlite"
          },
          "schema_evolution": "auto"
        }
      }
    }
  },
  "sapux": [
    "app/trip-manager",
    "app/tripmanager"
  ]
}